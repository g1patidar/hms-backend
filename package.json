{
  "name": "hms-backend",
  "version": "1.0.0",
  "description": "Hospital Management System (HMS) REST API using Node.js, Express, and MongoDB (Mongoose).",
  "private": true,
  "main": "src/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src --ext js,json --exec node src/server.js",
    "simple": "node simple-server.js",
    "simple:dev": "nodemon --watch simple-server.js simple-server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "seed": "node src/scripts/seed.js",
    "migrate": "node src/scripts/migrate.js",
    "cron-run": "node src/jobs/retentionJob.js --dry-run"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "verbose": true
  },
  "license": "MIT",
  "author": ""
}
